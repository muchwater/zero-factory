# AI Model Server 환경 변수

# 서버 설정
PORT=8000
HOST=0.0.0.0

# 디바이스 설정
DEVICE=cuda  # cuda 또는 cpu
CUDA_VISIBLE_DEVICES=0  # GPU 인덱스 (없으면 모든 GPU 사용)

# 모델 경로
CLASSIFIER_MODEL_PATH=./models/weights/classifier.pth
BEVERAGE_DETECTOR_MODEL_PATH=./models/weights/beverage_detector.pth
CLIP_MODEL_NAME=openai/clip-vit-base-patch32

# 추론 설정
BATCH_SIZE=8
MAX_IMAGE_SIZE=2048  # 최대 이미지 크기 (픽셀)

# 로깅
LOG_LEVEL=info  # debug, info, warning, error

# 업로드 설정
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB (bytes)
